<div class="mx-auto" style="width: 900px; ">
  <div class="d-flex justify-content-center mt-5">
    <h2 class="title_store">Bienvenue dans votre inventaire</h2>
  </div>
  <div class="search">
      <%= form_with url: inventories_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control m-3",
              placeholder: "Chapeau..."
          %>
        <%= submit_tag "Rechercher", name: "", class: "btn btn-outline-primary m-3 rounded-5" %>
      <% end %>
  </div>
  <div class="cards">
    <% @inventories.each do |inventorie| %>
        <div class="card-product">
        <%= image_tag inventorie.item.picture, class: "img_characters" %>
          <div class="card-product-infos">
              <h2 class= "pb-3"><%= inventorie.item.name %></h2>
              <% if inventorie.status == "not_equipped" %>
                <%= link_to "Equiper", inventory_equipped_path(inventorie), class: "button_equiped", data: {turbo_method: :patch} %>
              <% else %>
                <%=link_to "DÃ©sÃ©quiper", inventory_equipped_path(inventorie), class: "button_desequiped", data: {turbo_method: :patch} %>
              <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
